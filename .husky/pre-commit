#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Get current branch name
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

# Check if branch name starts with a number or "hotfix/"
if ! echo "$BRANCH_NAME" | grep -qE '^[0-9]+-' && ! echo "$BRANCH_NAME" | grep -qE '^hotfix/'; then
  echo "‚ùå Commit rejected: Branch name must start with a number (e.g., '00-my-branch') or 'hotfix/'."
  exit 1
fi

# Run lint-staged
npx lint-staged
